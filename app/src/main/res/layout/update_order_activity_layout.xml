<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSecondaryDark"
        android:elevation="4dp">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h6_size"
            android:fontFamily="@font/product_sans"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/client_data"
                android:textSize="@dimen/h6_size"
                android:textColor="?attr/textColor"
                android:fontFamily="@font/product_sans"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/client_firstname_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:endIconMode="clear_text"
                app:hintTextColor="?attr/textColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/client_firstname_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/client_lastname_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:endIconMode="clear_text"
                app:hintTextColor="?attr/textColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/client_lastname_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/client_order_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:endIconMode="clear_text"
                app:hintTextColor="?attr/textColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/client_email_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textWebEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/client_instagram_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/client_instagram"
                app:endIconMode="clear_text"
                app:hintTextColor="?attr/textColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/client_instagram_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_data"
                android:textSize="@dimen/h6_size"
                android:textColor="?attr/textColor"
                android:fontFamily="@font/product_sans"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/client_order_type"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:hint="@string/order_type"
                    app:hintTextColor="?attr/textColor">

                    <AutoCompleteTextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:labelFor="@+id/client_order_type" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/client_order_type2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:hint="@string/order_type"
                    app:hintTextColor="?attr/textColor">

                    <AutoCompleteTextView
                        android:layout_width="187dp"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:labelFor="@+id/client_order_type" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/order_responsible_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/order_responsible"
                app:endIconMode="clear_text"
                app:hintTextColor="?attr/textColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/order_responsible_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/order_commentaries_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/order_commentaries"
                app:endIconMode="clear_text"
                app:hintTextColor="?attr/textColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/order_commentaries_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/order_price_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:endIconMode="clear_text"
                app:hintTextColor="?attr/textColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/order_price_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/save"
                android:elevation="0dp"
                android:layout_marginVertical="20dp"
                android:textColor="?attr/textColor"
                android:textAlignment="center"
                app:backgroundTint="@color/colorAccent"
                android:shadowDy="5"
                app:cornerRadius="25dp"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>